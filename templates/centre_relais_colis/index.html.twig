{% extends 'base.html.twig' %}

{% block title %}Centre Relais Colis{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('navbar') }}
    {{ encore_entry_link_tags('centreRelaisColis') }}
{% endblock %}

{% block body %}
    <div class="container-fluid p-0 m-0 w-100">
        <div class="row firstRow w-100 ps-5 pe-5">
            <div class="d-flex flex-row align-items-center justify-content-end gap-4">
                <button class="navbar-toggler me-auto d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="bi bi-list fs-1"></i>
                </button>
                <a href="{{ path('app_notification') }}">
                    <img class="notificationBell" src="{{ asset('img/Bell.png') }}" alt="notification button">
                </a>
                <div class="profile rounded-circle d-flex justify-content-center align-items-center">
                    {{user.email|slice(0, 1)|upper}}
                </div>
            </div>
        </div>
        <div class="row secondRow w-100 collapse d-lg-flex" id="navbarToggleExternalContent">
            <div class="col-lg-2 leftNavBar d-flex flex-column align-items-center text-center p-4 gap-4">
                <a href="{{ path('app_rapports') }}" class="text-decoration-none">Rapports</a>
                <a href="{{ path('app_commande') }}" class="text-decoration-none">Commandes</a>
                <a href="{{ path('app_centre_relais_colis') }}" class="text-decoration-none"><u>Centre de Relais Colis</u></a>
                <a href="{{ path('app_client') }}" class="text-decoration-none">Clients</u></a>
                <a href="{{ path('app_parametre') }}" class="text-decoration-none">Paramètres</a>
                <a href="{{ path('app_logout') }}" class="text-decoration-none logoutButton mt-auto">Déconnexion</u></a>
            </div>
            <div class="main col-10">
                {% if centreRelaisColis is not empty%}
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">nom</th>
                                <th scope="col">adresse</th>
                                <th scope="col">ville</th>
                                <th scope="col">code postal</th>
                                <th scope="col">pays</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for unCentre in centreRelaisColis %}
                                <tr>
                                    <th scope="row">{{unCentre.id}}</th>
                                    <td>{{unCentre.nom}}</td>
                                    <td>{{unCentre.adresse}}</td>
                                    <td>{{unCentre.ville}}</td>
                                    <td>{{unCentre.codePostal}}</td>
                                    <td>{{unCentre.pays}}</td>
                                    <td>
                                        <a href="{{path('app_centre_relais_colis_modify', {'id': unCentre.id})}}" type="button" class="btn btn-warning">Éditer</a>
                                    </td>
                                    <td>
                                        <a href="{{path('app_centre_relais_colis_delete', {'id': unCentre.id})}}" type="button" class="btn btn-danger">Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="position-relative text-center top-50 start-50 translate-middle">Il n'y a aucun centre de relais colis.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
