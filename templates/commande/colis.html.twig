        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">volume</th>
                <th scope="col">poids</th>
                <th scope="col">etat</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for c in colis %}
                <tr>
                    <th scope="row">{{c.id}}</th>
                    <td>{{c.Volume}}</td>
                    <td>{{c.Poids}}</td>
                    <td>{{c.etat.nom}}</td>
                    <td>
                        <a href="{{path('app_commande_colis_modify', {'id': c.id})}}" type="button" class="btn btn-warning">Ã‰diter</a>
                    </td>
